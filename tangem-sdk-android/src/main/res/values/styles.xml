<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardSdkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sdk_primary</item>
        <item name="colorOnPrimary">@color/sdk_on_primary</item>
        <item name="colorSecondary">@color/sdk_secondary</item>
        <item name="colorOnSecondary">@color/sdk_on_secondary</item>
        <item name="android:colorBackground">@color/sdk_background</item>
        <item name="colorOnBackground">@color/sdk_on_background</item>
        <item name="colorSurface">@color/sdk_surface</item>
        <item name="colorOnSurface">@color/sdk_on_surface</item>
        <item name="colorError">@color/sdk_error</item>
        <item name="colorOnError">@color/sdk_on_error</item>
        <item name="bottomSheetDialogTheme">@style/SdkBottomSheetDialogStyle</item>
    </style>

    <style name="SdkBottomSheetDialogStyle" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
<!--        <item name="android:backgroundDimEnabled">true</item>-->
<!--        <item name="android:backgroundDimAmount">0.6</item>-->
        <item name="android:backgroundTint">@color/sdk_background</item>
    </style>

    <style name="Widget.Sdk.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Widget.Sdk.Button.Primary" parent="Widget.Sdk.Button">
        <item name="android:textColor">@color/sdk_button_primary_text_selector</item>
        <item name="backgroundTint">@color/sdk_button_primary_bg_selector</item>
    </style>

    <style name="Widget.Sdk.Button.Secondary" parent="Widget.Sdk.Button">
        <item name="android:textColor">@color/sdk_button_secondary_text_selector</item>
        <item name="backgroundTint">@color/sdk_button_secondary_bg_selector</item>
    </style>

</resources>
