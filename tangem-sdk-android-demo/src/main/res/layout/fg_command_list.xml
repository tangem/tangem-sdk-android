<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/cardView"
            layout="@layout/card" />

        <include
            android:id="@+id/attestationView"
            layout="@layout/attestation" />

        <include
            android:id="@+id/walletView"
            layout="@layout/wallet" />

        <include
            android:id="@+id/signView"
            layout="@layout/sign" />

        <include
            android:id="@+id/hdWalletView"
            layout="@layout/hd_wallet" />

        <include
            android:id="@+id/backupView"
            layout="@layout/backup" />

        <include
            android:id="@+id/issuerDataView"
            layout="@layout/issuer_data" />

        <include
            android:id="@+id/issuerExDataView"
            layout="@layout/issuer_ex_data" />

        <include
            android:id="@+id/userDataView"
            layout="@layout/user_data" />

        <include
            android:id="@+id/setPinView"
            layout="@layout/set_pin" />

        <include
            android:id="@+id/fileDataView"
            layout="@layout/file_data" />

        <include
            android:id="@+id/jRpcView"
            layout="@layout/json_rpc" />

        <include
            android:id="@+id/utilsView"
            layout="@layout/utils" />

        <include
            android:id="@+id/themeView"
            layout="@layout/theme" />

    </LinearLayout>

</ScrollView>
